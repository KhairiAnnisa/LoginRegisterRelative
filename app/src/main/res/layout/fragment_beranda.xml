<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Beranda">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="295dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:background="@drawable/search_shape"
                android:hint="Mau Makan apa hari ini?"
                android:paddingLeft="10dp"
                android:textSize="14dp"></EditText>

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_search"
                android:layout_marginLeft="20dp"></Button>

        </LinearLayout>

        <ImageView
            android:layout_width="353dp"
            android:layout_height="171dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/iklan"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:text="Aneka Kuliner Menarik"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="12dp"
            android:layout_marginTop="20dp"></TextView>

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="125dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="125dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/minuman"/>
                <TextView
                    android:layout_width="54dp"
                    android:layout_height="17dp"
                    android:text="Minuman"
                    android:textSize="11dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsregular"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="125dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/minuman"/>
                <TextView
                    android:layout_width="54dp"
                    android:layout_height="17dp"
                    android:text="Minuman"
                    android:textSize="11dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsregular"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="125dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/minuman"/>
                <TextView
                    android:layout_width="54dp"
                    android:layout_height="17dp"
                    android:text="Minuman"
                    android:textSize="11dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsregular"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>